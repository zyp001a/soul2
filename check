#!/usr/bin/env bash
GOPATH=~/go
if [ "seed.sl" -nt "seed.sl.go" ]; then
		node ../soul/bootstrap.sl.js seed.sl 3
		/usr/bin/go build
fi
if [ "progl-grammar.js" -nt "progl-parser.js" ]; then
		node progl-grammar.js
fi
if [ "tpl-grammar.js" -nt "tpl-parser.js" ]; then
		node tpl-grammar.js
fi

rc=$?
if [[ $rc != 0 ]]; then
		echo ===build failed
		exit 1
fi

if [ -z "$1" ]; then
		for f in `ls test/*.sl `
		do
				res=$(/usr/bin/go run seed.sl.go $f | diff ${f}.log -)
				if [[ $res ]]; then
						echo ===error: $f
						echo $res
				fi			 
				rc=$?
				if [[ $rc == 0 ]]; then
						echo ===done: $f 
				fi
		done
else
	  if [ "seed.sl.go" -nt "soul2" ]; then
				/usr/bin/go build
		fi		
		for f in `ls test/$1*.sl `
		do
 				./soul2 $f | tee ${f}.log
				rc=$?
				if [[ $rc == 0 ]]; then
						echo ===done: $f 
				fi
		done
fi
echo ===all done
